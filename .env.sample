COMPOSE_PROJECT_NAME=yaka

# Kanban Application Environment Variables
BASE_URL=http://localhost:3000

# Backend Configuration
SMTP_HOST=0.0.0.0
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
SMTP_SECURE=starttls
SMTP_FROM=no-reply@yaka.local

# Frontend Configuration
API_BASE_URL=http://localhost:8000

# Demo Mode (use only for demo purposes)
DEMO_MODE=false

# Default language
DEFAULT_LANGUAGE=en

# Optional: Database Configuration (if using PostgreSQL)
# DATABASE_URL=postgresql://kanban_user:kanban_password@db:5432/kanban

# Optional: JWT Secret (if using custom JWT configuration)
# JWT_SECRET=your_jwt_secret_key_here